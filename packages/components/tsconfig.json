{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.spec.?s",
    "**/*.stories.?s"
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  }
}